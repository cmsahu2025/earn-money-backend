datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

// USER TABLE
model User {
  id           Int             @id @default(autoincrement())
  name         String
  email        String           @unique
  password     String
  wallet       Int              @default(0)
  role         String           @default("user")
  createdAt    DateTime         @default(now())

  transactions Transaction[]
  watchHistory WatchHistory[]
  withdraws    Withdraw[]
}

// TRANSACTION TABLE
model Transaction {
  id        Int      @id @default(autoincrement())
  amount    Int
  type      String
  user      User     @relation(fields: [userId], references: [id])
  userId    Int
  createdAt DateTime @default(now())
}

// WATCH HISTORY TABLE
model WatchHistory {
  id        Int      @id @default(autoincrement())
  reward    Int
  user      User     @relation(fields: [userId], references: [id])
  userId    Int
  createdAt DateTime @default(now())
}

// WITHDRAW TABLE
model Withdraw {
  id        Int      @id @default(autoincrement())
  amount    Int
  status    String   @default("pending")   // pending, approved, rejected
  user      User     @relation(fields: [userId], references: [id])
  userId    Int
  createdAt DateTime @default(now())
}
